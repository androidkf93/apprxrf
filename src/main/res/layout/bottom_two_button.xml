<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    android:id="@+id/ll_category_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">
    <View style="@style/view_line"
        android:background="@color/text_9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_vertical_90"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bottom_left"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="排序&amp;批量操作"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View style="@style/view_v_line"
            android:layout_marginTop="@dimen/activity_horizontal_half_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_half_margin"
            android:background="@color/red"/>
        <TextView
            android:id="@+id/tv_bottom_right"
            android:textColor="@color/red"
            android:text="新建分类"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
