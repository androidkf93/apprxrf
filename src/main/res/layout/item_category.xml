<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_edit"
        android:layout_alignParentLeft="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_6"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_28"/>
        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_9"
            android:text="1个商品"/>
    </LinearLayout>

<TextView
    android:id="@+id/tv_edit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_double_margin"
    android:paddingRight="@dimen/activity_horizontal_double_margin"
    android:paddingTop="@dimen/activity_horizontal_half_margin"
    android:paddingBottom="@dimen/activity_horizontal_half_margin"
    android:layout_toLeftOf="@+id/tv_add_good"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:text="编辑"
    android:layout_centerVertical="true"
    android:textColor="@color/red"
    android:background="@drawable/biankuang_white_red"/>

<TextView
    android:id="@+id/tv_add_good"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_one_half_margin"
    android:paddingRight="@dimen/activity_horizontal_one_half_margin"
    android:paddingTop="@dimen/activity_horizontal_half_margin"
    android:paddingBottom="@dimen/activity_horizontal_half_margin"
    android:text="新建商品"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:textColor="@color/red"
    android:background="@drawable/biankuang_white_red"/>
</RelativeLayout>
