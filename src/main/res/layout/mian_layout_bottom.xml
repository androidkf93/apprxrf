<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/projection_up" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/ll_bottom_one"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:scaleType="fitCenter"
                    android:focusable="false"
                    android:enabled="false"
                    android:src="@drawable/selector_home" />

                <TextView
                    android:id="@+id/tv_one"
                    android:text="@string/bottom_one"
                    android:enabled="false"
                    style="@style/tv_singleLine_center" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_bottom_two"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_order" />

                <TextView
                    android:id="@+id/tv_two"
                    style="@style/tv_singleLine_center"
                    android:text="@string/bottom_two" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_four"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_service" />

                <TextView
                    android:id="@+id/tv_four"
                    style="@style/tv_singleLine_center"
                    android:text="@string/bottom_four" />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_bottom_five"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="fill_parent"
                    android:layout_height="23dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_user" />

                <TextView
                    android:id="@+id/tv_five"
                    style="@style/tv_singleLine_center"
                    android:text="@string/bottom_five" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>