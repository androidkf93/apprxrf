<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f5">
<ListView
    android:id="@+id/lv_content"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@null"
    android:dividerHeight="@dimen/activity_horizontal_half_margin"
    android:visibility="gone"
    android:layout_above="@+id/tv_add_spec"></ListView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tv_add_spec">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
    <TextView
        android:id="@+id/tv_add_spec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_vertical_88"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/white"
        android:background="@drawable/biankuang_red_r10"
        android:textSize="@dimen/text_size_26"
        android:text="+ 添加属性"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
</RelativeLayout>
