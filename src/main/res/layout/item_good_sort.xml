<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_group"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_half_margin"
    android:paddingTop="@dimen/activity_horizontal_half_margin"
    android:background="@android:color/white">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_toRightOf="@+id/checkbox"
        android:id="@+id/img_good"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_alignTop="@+id/img_good"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_good"
        android:layout_alignParentRight="true"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_good_name"
            android:textColor="@color/text_6"
            android:textSize="@dimen/text_size_28"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_stock"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_24"
                android:text="name"
                android:layout_marginTop="@dimen/activity_horizontal_half_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sales_volumes"
                android:textColor="@color/text_6"
                android:textSize="@dimen/text_size_24"
                android:text="销售"
                android:layout_marginLeft="@dimen/activity_horizontal_half_margin"
                android:layout_marginTop="@dimen/activity_horizontal_half_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_half_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_good_price"
            android:textColor="@color/chrysoidine"
            android:textSize="@dimen/text_size_24"
            android:text="￥130"
            android:layout_marginTop="@dimen/activity_horizontal_half_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
