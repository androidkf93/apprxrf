<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_memu_bg"
    android:paddingLeft="20dp"
    android:paddingRight="@dimen/activity_horizontal_double_margin"
    android:paddingTop="@dimen/activity_horizontal_double_margin">
    <TextView
        android:id="@+id/tv_pop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:text="1"/>
    <TextView
        android:layout_below="@+id/tv_pop_title"
        android:id="@+id/tv_pop_memu"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#4A4A4A"
        android:text="4"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pop_memu"
        android:layout_marginTop="@dimen/activity_horizontal_one_half_margin">
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/red"
            android:text="马上去"/>
        <View style="@style/view_v_line"/>
        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="暂时不去"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/tv_pop_memu"
        android:layout_marginTop="@dimen/activity_horizontal_one_half_margin"
        style="@style/view_line"/>
</RelativeLayout>
